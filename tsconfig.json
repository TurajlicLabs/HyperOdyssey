{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "baseUrl": ".",
        "types": [
            "jest"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "include": [
            "src/**/*.ts",
            "*.ts"
        ],
        "exclude": [
            "node_modules",
            "examples"
        ]
    }
}
