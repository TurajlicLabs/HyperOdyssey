{
    "name": "hyperodyssey",
    "version": "0.0.1",
    "description": "A javascript library for simplifying Hypertext Application Language (HAL)",
    "main": "index.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TurajlicLabs/HyperOdyssey.git"
    },
    "keywords": [
        "hal",
        "typescript",
        "hypermedia"
    ],
    "author": "TurajlicLabs",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/TurajlicLabs/HyperOdyssey/issues"
    },
    "jest": {
        "clearMocks": true,
        "modulePathIgnorePatterns": [
            "<rootDir>/examples",
            "<rootDir>/node_modules"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "coverageDirectory": "coverage",
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testEnvironment": "node"
    },
    "homepage": "https://github.com/TurajlicLabs/HyperOdyssey#readme",
    "devDependencies": {
        "@babel/core": "7.9.0",
        "@babel/plugin-transform-runtime": "7.10.1",
        "@babel/preset-env": "7.9.5",
        "@babel/preset-typescript": "7.9.0",
        "@types/jest": "25.2.1",
        "babel-jest": "25.3.0",
        "jest": "25.3.0",
        "ts-jest": "26.0.0",
        "typescript": "3.8.3"
    },
    "dependencies": {
        "halfred": "2.0.0",
        "uri-templates": "^0.2.0"
    }
}
